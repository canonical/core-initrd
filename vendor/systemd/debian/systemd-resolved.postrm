#!/bin/sh

set -e

if [ "$1" = remove ]; then
    if [ "$(readlink "/etc/resolv.conf")" = "../run/systemd/resolve/stub-resolv.conf" ] || [ "$(readlink "/etc/resolv.conf")" = "/run/systemd/resolve/stub-resolv.conf" ]; then
        echo "Removing /etc/resolv.conf symlink to /run/systemd/resolve/stub-resolv.conf..."
        rm -f "/etc/resolv.conf" || echo "Cannot remove /etc/resolv.conf."
        if [ -f "/run/systemd/resolve/resolv.conf" ]; then
            echo "Copying /run/systemd/resolve/resolv.conf to /etc/resolv.conf..."
            cp "/run/systemd/resolve/resolv.conf" "/etc/resolv.conf" || echo "Cannot copy /run/systemd/resolve/resolv.conf to /etc/resolv.conf."
            # We prefer a current resolv.conf rather than an older backup, if available
            rm -f "/etc/.resolv.conf.systemd-resolved.bak"
        elif [ -f "/etc/.resolv.conf.systemd-resolved.bak" ]; then
            echo "Restoring previous resolv.conf..."
            mv "/etc/.resolv.conf.systemd-resolved.bak" "/etc/resolv.conf" || echo "Cannot restore /etc/resolv.conf backup."
        else
            echo "Creating an empty /etc/resolv.conf..."
            touch "/etc/resolv.conf" || echo "Cannot create an empty /etc/resolv.conf."
        fi
    fi
fi

